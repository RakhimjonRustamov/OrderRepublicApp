<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/category_cardview_fav"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/food_price_fav"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textColor="@color/darkGreen"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,20:5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/food_image_fav"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_burger"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/food_price_fav" />

            <TextView
                android:id="@+id/food_name_fav"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"

                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/restaurantName_fav"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toRightOf="@id/food_image_fav"
                app:layout_constraintTop_toTopOf="@id/food_price_fav"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/restaurantName_fav"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toRightOf="@id/food_image_fav"

                app:layout_constraintTop_toBottomOf="@id/food_name_fav" />
            <TextView
                android:id="@+id/food_description_fav"
                android:layout_width="match_parent"
                android:layout_height="18dp"

                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toRightOf="@id/food_image_fav"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restaurantName_fav" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
