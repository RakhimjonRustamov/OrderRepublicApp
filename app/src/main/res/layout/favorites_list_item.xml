<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_cardview_fav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_image_fav"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:layout_weight="3.5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_burger" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="4.3">

            <TextView
                android:id="@+id/food_name_fav"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="3dp"
                android:paddingTop="7dp"
                android:text="Hello"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/food_description_fav"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="3dp"
                android:text="Food Descriptiom"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/food_name_fav"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/restaurantName_fav"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="8dp"
                android:text=" Restaunrant Name"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/food_name_fav"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/food_price_fav"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:gravity="center"
                android:paddingTop="7dp"
                android:text="600"
                android:textColor="@color/darkGreen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_add_to_cart__fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/add_button"
                android:drawableLeft="@drawable/ic_shopping"
                android:gravity="left|center"
                android:paddingLeft="12dp"
                android:text="Add"
                android:textColor="@color/background" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
