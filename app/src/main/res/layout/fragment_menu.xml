<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".iu.main.menu.CategoriesFragment">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.smarteist.autoimageslider.SliderLayout
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/menu_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/menu_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:text="MENU"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageSlider"
        app:layout_constraintStart_toEndOf="@id/imageSlider"
        app:layout_constraintTop_toBottomOf="@+id/imageSlider" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_text">

        <android.support.v7.widget.CardView
          android:id="@+id/category_drinks"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="3dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/menu_text"
          app:cardUseCompatPadding="true">
          <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_back" />

          <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:textColor="@color/background"
            android:textSize="24sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
          android:id="@+id/category_meals"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          app:cardElevation="3dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/menu_text"
          app:cardUseCompatPadding="true">
          <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sandwiches" />

          <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:textColor="@color/background"
            android:textSize="24sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
          android:id="@+id/category_burger"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          app:cardElevation="3dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/menu_text"
          app:cardUseCompatPadding="true">
          <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_back" />

          <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:textColor="@color/background"
            android:textSize="24sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
          android:id="@+id/category_dessert"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          app:cardElevation="3dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/menu_text"
          app:cardUseCompatPadding="true">
          <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/funny_sweets" />

          <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:textColor="@color/background"
            android:textSize="24sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
          android:id="@+id/category_salads"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          app:cardElevation="3dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/menu_text"
          app:cardUseCompatPadding="true">
          <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_back" />

          <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:textColor="@color/background"
            android:textSize="24sp" />
        </android.support.v7.widget.CardView>
      </LinearLayout>
    </android.support.constraint.ConstraintLayout>
  </ScrollView>
</FrameLayout>